<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#E7A9A1"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/back_symbol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/home_symbol"/>

    <TextView
        android:id="@+id/label_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E7A9A1"
        android:text="@string/my_wonderful_today"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_below="@+id/back_symbol"
        android:layout_marginTop="30dp"/>

    <ListView
        android:id="@+id/moment_list"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/label_today"
        android:layout_marginTop="20dp">
    </ListView>

</RelativeLayout>